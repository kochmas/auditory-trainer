{
  "name": "auditory-trainer",
  "version": "1.0.0",
  "main": "electron-main.js",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "compile:db": "tsc src/db/indexeddb.ts --target es2015 --module none --outDir dist/src/db --rootDir src/db --skipLibCheck",
    "build:win": "npm run compile:db && electron-builder --win portable",
    "build:android": "npm run compile:db && npx cap copy android && cd android && ./gradlew assembleRelease",
    "build": "npm run compile:db"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.2",
    "jest": "^29.7.0"
  },
  "type": "module",
  "jest": {
    "testMatch": [
      "**/tests/audioEngine.test.js"
    ]
  }
}